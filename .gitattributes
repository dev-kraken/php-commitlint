# Auto detect text files and perform LF normalization
* text=auto

# PHP files
*.php text eol=lf

# JavaScript and TypeScript files
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows batch files  
*.bat text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.ini text eol=lf
*.env text eol=lf

# Exclude files from archive/export
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
tests/ export-ignore
*.dist.php export-ignore
phpstan.neon export-ignore
phpunit.xml export-ignore
Makefile export-ignore
CONTRIBUTING.md export-ignore
CHANGELOG.md export-ignore

# Language detection for GitHub
*.php linguist-language=PHP
vendor/* linguist-vendored
docs/* linguist-documentation
examples/* linguist-documentation
coverage-html/* linguist-generated
*.md linguist-documentation

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary

# Archives
*.tar binary
*.gz binary
*.bz2 binary
*.xz binary
*.lzma binary

# Executables
*.exe binary
*.so binary
*.dll binary

# Composer files
composer.json text eol=lf
composer.lock text eol=lf

# Config files
.editorconfig text eol=lf
.php-cs-fixer.dist.php text eol=lf 