{
  "name": "dev-kraken/php-commitlint",
  "description": "A powerful Git hooks and commit message linting tool for PHP projects - combining the best of husky and commitlint",
  "type": "library",
  "keywords": [
    "git",
    "hooks",
    "commit",
    "lint",
    "husky",
    "commitlint",
    "php",
    "validation"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "DevKraken",
      "email": "soman@devkraken.com"
    }
  ],
  "require": {
    "php": ">=8.2",
    "symfony/console": "^6.0|^7.0",
    "symfony/process": "^6.0|^7.0",
    "symfony/finder": "^6.0|^7.0"
  },
  "require-dev": {
    "pestphp/pest": "^2.0",
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.0",
    "composer/composer": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "DevKraken\\PhpCommitlint\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DevKraken\\PhpCommitlint\\Tests\\": "tests/"
    }
  },
  "bin": [
    "bin/php-commitlint"
  ],
  "scripts": {
    "post-install-cmd": "DevKraken\\PhpCommitlint\\Installer::postInstall",
    "post-update-cmd": "DevKraken\\PhpCommitlint\\Installer::postUpdate",
    "test": "pest",
    "phpstan": "phpstan analyse",
    "cs-fix": "php-cs-fixer fix"
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true,
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
